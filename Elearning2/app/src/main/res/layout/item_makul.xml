<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_makul_makul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:text="PEMROGRAMAN BERORIENTASI OBJEK"/>

        <TextView
            android:id="@+id/tv_makul_dosenX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:text="Nurrochman"/>

        <TextView
            android:id="@+id/tv_makul_mhsX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:text="45 peserta"/>
        <Button
            android:id="@+id/ButtonDtlMakul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail"/>
    </LinearLayout>
</android.support.v7.widget.CardView>